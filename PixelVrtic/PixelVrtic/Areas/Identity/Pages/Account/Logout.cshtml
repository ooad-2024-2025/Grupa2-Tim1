@page
@model LogoutModel
@{
    ViewData["Title"] = "Odjava";
    Layout = null;
}

<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #fde9f0;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .logout-box {
            background-color: white;
            padding: 3rem;
            border-radius: 20px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .btn-pink {
            background-color: #f7b6c2;
            color: white;
            border: none;
        }

            .btn-pink:hover {
                background-color: #f292a7;
            }

        .btn-rounded {
            border-radius: 25px;
            padding: 0.5rem 2rem;
        }

        .btn-outline-secondary {
            border-radius: 25px;
        }

        h1 {
            font-size: 1.5rem;
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <div class="logout-box">
        <h1>Da li ste sigurni da se želite odjaviti?</h1>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })">
                <button type="submit" class="btn btn-pink btn-rounded me-3">Da</button>
                <a href="/" class="btn btn-outline-secondary btn-rounded">Ne</a>
            </form>
        }
        else
        {
            <p>Uspješno ste odjavljeni.</p>
        }
    </div>
</body>
</html>
