@model List<PixelVrtic.Models.FinansijskaEvidencija>
@{
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #fde9f0;
        margin: 0;
    }

    .finansije-title {
        font-size: 2rem;
        font-weight: 600;
        text-align: center;
        color: #303053;
        margin-bottom: 2rem;
    }

    .table-container {
        max-width: 800px;
        margin: 2rem auto 0 auto; /* Dodan gornji razmak */
        background-color: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
    }


    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .status-placeno {
        color: green;
        font-weight: bold;
    }

    .status-nije {
        color: red;
        font-weight: bold;
    }
</style>

<div class="table-container">
    <div class="finansije-title">Finansije</div>

    @if (Model.Count == 0)
    {
        <p class="text-center">Nema evidentiranih finansijskih podataka.</p>
    }
    else
    {
        <div class="main-content py-4">
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Datum</th>
                    <th>Iznos (KM)</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <td>@f.mjesec/@f.godina</td>
                        <td>@f.iznos.ToString("0.00")</td>
                        <td class="@(f.uplaceno ? "status-placeno" : "status-nije")">
                            @(f.uplaceno ? "Uplaćeno" : "Nije uplaćeno")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    }
</div>
