
@model IEnumerable<PixelVrtic.Models.Korisnik>

@{
    ViewData["Title"] = "Roditelji";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background-color: #fde9f0;
        font-family: 'Segoe UI', sans-serif;
    }

    .sidebar {
        background-color: #c9f0ff;
        height: 100vh;
        padding-top: 2rem;
    }

    .table-custom {
        background-color: white;
        border-radius: 12px;
        overflow: hidden;
    }

    .btn-group-tag {
        border-radius: 20px;
        padding: 0.25rem 1rem;
        font-weight: bold;
        color: white;
    }

    .group-IIA { background-color: #f97a7a; }
    .group-IIB { background-color: #ffc107; }
    .group-IIC { background-color: #a0e3e2; }
    .group-VA  { background-color: #f97a7a; }

    .avatar-circle {
        background-color: #333;
        border-radius: 50%;
        color: white;
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
    }

    .content-area {
        padding: 2rem;
    }
</style>

<div class="container-fluid">
    <div class="row">

        <!-- Main content -->
        <div class="col-10 content-area">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">Roditelji</h2>
                <button class="btn btn-info rounded-pill">+ Novi roditelj</button>
            </div>

            <div class="table-custom p-3 shadow-sm">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Ime</th>
                            <th>Datum pridruživanja</th>
                            <th>Ime djeteta</th>
                            <th>Grad</th>
                            <th>Kontakt</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td><input type="checkbox" /></td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="avatar-circle">@r.ime[0]@r.prezime[0]</div>
                                        <span>@r.ime @r.prezime</span>
                                    </div>
                                </td>
                                <td>@r.datumRodjenja.ToString()</td>
                                <td>ovdje dodati ime dijeteta</td>
                                <td>@r.grad</td>
                                <td>
                                    <a href="tel:@r.brojTelefona" class="me-2"><i class="bi bi-telephone"></i></a>
                                    <a href="mailto:@r.Email"><i class="bi bi-envelope"></i></a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
  
