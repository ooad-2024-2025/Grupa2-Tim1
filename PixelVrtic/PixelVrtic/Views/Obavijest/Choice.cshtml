@{
    ViewData["Title"] = "Obavještenja";
}

<style>
    body {
        margin: 0;
        background-color: #fde9f1;
        font-family: 'Poppins', sans-serif;
    }

    .center-wrapper {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .button-container {
        display: flex;
        gap: 40px;
    }

    .circle-button {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: none;
        background-color: #e7f6fd;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        font-size: 2rem;
        cursor: pointer;
        transition: transform 0.2s;
    }

        .circle-button:hover {
            transform: scale(1.1);
        }

    a {
        text-decoration: none;
        color: inherit;
    }
</style>

<div class="center-wrapper">
    <div class="button-container">
        <a asp-action="Create">
            <button class="circle-button">+</button>
        </a>
        <a asp-action="Index">
            <button class="circle-button">📖</button>
        </a>
    </div>
</div>
