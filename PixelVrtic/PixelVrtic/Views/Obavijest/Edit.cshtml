@model PixelVrtic.Models.Obavijest

@{
    ViewData["Title"] = "Uredi obavijest";
}

<style>
    body {
        background-color: #e0f7fa; /* baby blue */
        font-family: 'Poppins', sans-serif;
    }

    .container {
        background: white;
        border-radius: 16px;
        padding: 40px;
        width: 40%;
        margin: 40px auto;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    h1 {
        font-size: 1.5rem;
        color: #2d2d5c;
        font-weight: 700;
        margin-bottom: 20px;
        text-align: center;
    }

    label {
        font-weight: 600;
        margin-top: 10px;
        display: block;
        text-transform: uppercase;
        color: #2d2d5c;
    }

    input, select {
        width: 100%;
        border: 1px solid #ccc;
        border-radius: 6px;
        padding: 10px;
        margin-top: 5px;
        margin-bottom: 15px;
        font-family: 'Poppins', sans-serif;
        font-size: 1rem;
    }

    .btn-submit {
        background-color: #d2f0fd;
        border: none;
        padding: 10px 30px;
        border-radius: 20px;
        color: #2d2d5c;
        font-weight: 600;
        cursor: pointer;
        display: block;
        margin: 0 auto;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #a7e4fb;
        }

    .back-link {
        display: block;
        margin-top: 25px;
        text-align: center;
        color: #2d2d5c;
        text-decoration: none;
        font-weight: 600;
    }

    .text-danger {
        font-size: 0.9rem;
        margin-top: -10px;
        margin-bottom: 10px;
        display: block;
    }
</style>

<div class="container">
    <h1>Uredi obavijest</h1>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="id" />

        <div class="form-group">
            <label asp-for="naslov">Naslov</label>
            <input asp-for="naslov" />
            <span asp-validation-for="naslov" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="tekst">Tekst</label>
            <input asp-for="tekst" />
            <span asp-validation-for="tekst" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="datum">Datum</label>
            <input asp-for="datum" />
            <span asp-validation-for="datum" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="idAutora">Autor</label>
            <select asp-for="idAutora" asp-items="ViewBag.idAutora"></select>
            <span asp-validation-for="idAutora" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-submit">Spremi</button>
    </form>

    <a asp-action="Index" class="back-link">⟵ Nazad na listu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
