@model IEnumerable<PixelVrtic.Models.Grupa>

@{
    ViewData["Title"] = "Grupe";
}

<div class="container">
    <div class="header-bar">
        <h1 class="section-title">Grupe</h1>
        @if (User.IsInRole("Administrator"))
        {
            <a asp-action="Create" class="add-button">+ Kreiraj grupu</a>
        }
    </div>

    <div class="cards-grid">
        @foreach (var grupa in Model)
        {
            <div class="group-card">
                <h2 class="group-name">@grupa.naziv</h2>
                <p class="group-vaspitac">
                    Vaspitač:
                    @(grupa.Korisnik != null
                                ? grupa.Korisnik.ime + " " + grupa.Korisnik.prezime
                                : "Nepoznat")
                </p>
                <div class="card-actions">
                    <a asp-controller="Dijete" asp-action="Index" asp-route-idGrupe="@grupa.id" class="open-link">
                        Otvori listu djece
                    </a>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Edit" asp-route-id="@grupa.id" class="edit-button" title="Uredi">


                            ✏️
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>

<style>
    .body{
        background-color: #fde9f0;
    }
    .add-button {
        background-color: lightpink;
        border-radius: 20px;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: white;
        font-weight: bold;
    }

        .add-button:hover,
        .add-button:focus {
            background-color: pink; /* hotpink, matches the theme */
            color: #fff;
            box-shadow: 0 2px 8px rgba(255, 105, 180, 0.15);
            text-decoration: none;
        }
    .container {
        padding: 2rem;
        background-color: #fde9f0;
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    .header-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .section-title {
        font-size: 1.8rem;
        color: #303053;
    }

    .cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
    }

    .group-card {
        background-color: #fff;
        padding: 1rem;
        border-radius: 12px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        color: #1b1b40;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .group-name {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .group-vaspitac {
        font-size: 0.95rem;
        color: #666;
        margin-bottom: 1rem;
    }

    .card-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .open-link {
        text-decoration: none;
        background-color: #cde2f2;
        color: #1b1b40;
        padding: 0.4rem 0.6rem;
        border-radius: 8px;
        font-size: 0.85rem;
    }

    .edit-button {
        font-size: 1.2rem;
        background: none;
        border: none;
        cursor: pointer;
        color: #4e4e8e;
        text-decoration: none;
    }

        .edit-button:hover {
            color: #1b1b40;
        }
</style>
