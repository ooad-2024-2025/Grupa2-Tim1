@page
@model PixelVrtic.Views.Admin.DashboardModel
@{
}

<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #fde9f0;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 2rem;
        }

        .card-box, .calendar, .notifications, .activity-section {
            border-radius: 20px;
            background: #fff;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            margin-bottom: 1.5rem;
        }

        .chart-placeholder {
            background: #f7f7f7;
            height: 200px;
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .calendar td, .calendar th {
            text-align: center;
            padding: 0.5rem;
        }

   
    </style>
</head>
<body>
    <form asp-controller="Admin" asp-action="PokreniRucno" method="post">
        <button type="submit" class="btn btn-primary">Generiši izvještaje ručno</button>
    </form>

    @if (TempData["Poruka"] != null)
    {
        <div class="alert alert-success">@TempData["Poruka"]</div>
    }

    <div class="container-fluid">
        <div class="row flex-column flex-md-row">
            <div class="col py-4 px-4">
                <h3 class="mb-4">Dashboard</h3>

                <div class="card-box">Roditelja<br><strong>@ViewBag.RoditeljCount</strong></div>
                <div class="card-box">Djeca<br><strong>@ViewBag.DjecaCount</strong></div>
                <div class="card-box">Vaspitača<br><strong>@ViewBag.VaspitacCount</strong></div>
                <div class="card-box">Aktivnosti<br><strong>@ViewBag.AktivnostiCount</strong></div>

            </div>
        </div>
    </div>
</body>
</html>
