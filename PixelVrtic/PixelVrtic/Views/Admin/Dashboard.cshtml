
@model PixelVrtic.Views.Admin.DashboardModel
@{
    Layout = "_Layout";
}


<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #fde9f0;
        }

        .dashboard-title {
            padding: 3rem;
            font-weight: 600;
            font-size: 2rem;
            color: #303053;
            margin-bottom: 2rem;
            text-align: center;
        }

        .metrics {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: center;
        }

        .card-box {
            width: 200px;
            height: 120px;
            border-radius: 20px;
            background: #fff;
            padding: 1rem;
            box-shadow: 0 4px 8px rgba(0,0,0,0.05);
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            color: #303053;
        }

            .card-box strong {
                font-size: 1.8rem;
                color: #e06b8f;
            }

        .dashboard-button {
            display: flex;
            justify-content: center;
            margin-top: 1rem;
            margin-bottom: 2rem;
        }

            .dashboard-button button {
                background-color: #e06b8f;
                border: none;
                padding: 0.75rem 1.5rem;
                border-radius: 25px;
                color: white;
                font-weight: bold;
                transition: 0.3s;
            }

                .dashboard-button button:hover {
                    background-color: #cc5e80;
                }

        .alert {
            max-width: 500px;
            margin: 1rem auto;
        }

        body {
            margin: 0;
            padding: 0;
        }

        .container-fluid.pt-4 {
            padding-top: 0 !important;
        }

    </style>

</head>
<body>
    <div class="container-fluid pt-4">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10">
                @if (TempData["Poruka"] != null)
                {
                    <div class="alert alert-success text-center">@TempData["Poruka"]</div>
                }

                <div class="dashboard-title">Statistika</div>

                <div class="metrics">
                    <div class="card-box">
                        Roditelja<br><strong>@ViewBag.RoditeljCount</strong>
                    </div>
                    <div class="card-box">
                        Djeca<br><strong>@ViewBag.DjecaCount</strong>
                    </div>
                    <div class="card-box">
                        Vaspitača<br><strong>@ViewBag.VaspitacCount</strong>
                    </div>
                    <div class="card-box">
                        Aktivnosti<br><strong>@ViewBag.AktivnostiCount</strong>
                    </div>
                </div>
                <div class="dashboard-button">
                    <form asp-controller="Admin" asp-action="PokreniRucno" method="post">
                        <button type="submit">Generiši izvještaje ručno</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
