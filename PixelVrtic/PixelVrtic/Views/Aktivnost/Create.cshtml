@model PixelVrtic.Models.Aktivnost

@{
    ViewData["Title"] = "Dodaj aktivnost";
}

<style>
    body {
        background-color: #e0f7fa; /* baby blue background */
        font-family: 'Poppins', sans-serif;
    }

    .container {
        background: white;
        border-radius: 16px;
        padding: 40px;
        width: 60%;
        margin: 40px auto;
        box-shadow: 0px 4px 20px rgba(0,0,0,0.1);
    }

    h1 {
        font-size: 1.5rem;
        color: #2d2d5c;
        font-weight: 700;
        margin-bottom: 20px;
        text-align: center;
    }

    label {
        font-weight: 600;
        margin-top: 10px;
        display: block;
    }

    input, select, textarea {
        width: 100%;
        border: 1px solid #ccc;
        border-radius: 6px;
        padding: 10px;
        margin-top: 5px;
        margin-bottom: 15px;
        font-family: 'Poppins', sans-serif;
    }

    .btn-submit {
        background-color: #d2f0fd;
        border: none;
        padding: 10px 30px;
        border-radius: 20px;
        color: #2d2d5c;
        font-weight: 600;
        cursor: pointer;
        display: block;
        margin: 0 auto;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #a7e4fb;
        }

    .back-link {
        display: block;
        margin-top: 25px;
        text-align: center;
        color: #2d2d5c;
        text-decoration: none;
        font-weight: 600;
    }

    .text-danger {
        font-size: 0.9rem;
        margin-top: -10px;
        margin-bottom: 10px;
        display: block;
    }

    label {
        font-weight: 600;
        margin-top: 10px;
        display: block;
        text-transform: uppercase;
    }

</style>

<div class="container">
    <h1>Dodaj aktivnost</h1>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="nazivAktivnosti">Naziv aktivnosti</label>
            <input asp-for="nazivAktivnosti" />
            <span asp-validation-for="nazivAktivnosti" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="tipAktivnosti">Tip aktivnosti</label>
            <select asp-for="tipAktivnosti" asp-items="ViewBag.TipAktivnosti"></select>
            <span asp-validation-for="tipAktivnosti" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="datumPocetka">Datum početka</label>
            <input asp-for="datumPocetka" type="date" />
            <span asp-validation-for="datumPocetka" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="datumZavrsetka">Datum završetka</label>
            <input asp-for="datumZavrsetka" type="date" />
            <span asp-validation-for="datumZavrsetka" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="opis">Opis</label>
            <textarea asp-for="opis" rows="3"></textarea>
            <span asp-validation-for="opis" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="idGrupe">Grupa</label>
            <select asp-for="idGrupe" asp-items="ViewBag.idGrupe"></select>
            <span asp-validation-for="idGrupe" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="idKorisnika">Korisnik</label>
            <select asp-for="idKorisnika" asp-items="ViewBag.idKorisnika"></select>
            <span asp-validation-for="idKorisnika" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="fotografija">Fotografija</label>
            <input asp-for="fotografija" />
            <span asp-validation-for="fotografija" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-submit">Dodaj</button>
    </form>

    <a asp-action="Index" class="back-link">⟵ Nazad na listu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
