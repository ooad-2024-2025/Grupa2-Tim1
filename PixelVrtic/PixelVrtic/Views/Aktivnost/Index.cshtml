@model IEnumerable<PixelVrtic.Models.Aktivnost>
@{
    ViewData["Title"] = "Kalendar aktivnosti";

    int year = ViewBag.Year;
    int month = ViewBag.Month;
    var daysInMonth = DateTime.DaysInMonth(year, month);
    var firstDay = new DateTime(year, month, 1);
    var startDayOfWeek = (int)firstDay.DayOfWeek;
    if (startDayOfWeek == 0) startDayOfWeek = 7;

    var today = DateTime.Today;
    var monthName = System.Globalization.CultureInfo.GetCultureInfo("bs-BA").DateTimeFormat.GetMonthName(month);
    var currentYear = ViewBag.Year;
    var currentMonth = ViewBag.Month;

    var monthNames = System.Globalization.CultureInfo
        .GetCultureInfo("bs-BA")
        .DateTimeFormat
        .MonthNames
        .Take(12)
        .ToList();

    var years = Enumerable.Range(DateTime.Now.Year - 5, 11).ToList();
}

<form asp-action="Index" method="get" class="calendar-nav-dropdowns">
    <select name="month" onchange="this.form.submit()">
        @for (int i = 1; i <= 12; i++)
        {
            if (i == currentMonth)
            {
                <option value="@i" selected>@monthNames[i - 1]</option>
            }
            else
            {
                <option value="@i">@monthNames[i - 1]</option>
            }
        }
    </select>

    <select name="year" onchange="this.form.submit()">
        @foreach (var y in years)
        {
            if (y == currentYear)
            {
                <option value="@y" selected>@y</option>
            }
            else
            {
                <option value="@y">@y</option>
            }
        }
    </select>
</form>


<div class="calendar-header">
    <h2>@monthName @year</h2>
    <div class="calendar-nav">
        <a asp-action="Index" asp-route-month="@(month == 1 ? 12 : month - 1)" asp-route-year="@(month == 1 ? year - 1 : year)">«</a>
        <a asp-action="Index" asp-route-month="@(month == 12 ? 1 : month + 1)" asp-route-year="@(month == 12 ? year + 1 : year)">»</a>
    </div>
</div>

<div class="calendar-grid">
    @foreach (var dayName in new[] { "Pon", "Uto", "Sri", "Čet", "Pet", "Sub", "Ned" })
    {
        <div class="calendar-day-name">@dayName</div>
    }

    @for (int i = 1; i < startDayOfWeek; i++)
    {
        <div class="calendar-day empty"></div>
    }
    @for (int day = 1; day <= daysInMonth; day++)
    {
        var currentDate = new DateTime(year, month, day);
        var dayActivities = Model.Where(a => a.datumPocetka.Date == currentDate).ToList();
        var isToday = currentDate.Date == today;

        <div class="calendar-day @(isToday ? "today" : "")" style="cursor:pointer;"
             onclick="location.href='@Url.Action("Create", "Aktivnost")?datumPocetka=@currentDate.ToString("yyyy-MM-dd")'">

            <div class="date-number">@day</div>

            @if (dayActivities.Any())
            {
                @foreach (var activity in dayActivities)
                {
                    <div class="activity-tooltip">
                        @if (ViewBag.IsAuthorizedUser == true)
                        {
                            <div class="activity-dot"
                                 onclick="event.stopPropagation(); location.href='@Url.Action("Edit", "Aktivnost", new { id = activity.id })'">
                            </div>
                        }
                        else
                        {
                            <div class="activity-dot"></div>
                        }

                        <div class="activity-popup">
                            <div class="activity-card">
                                <strong>@activity.nazivAktivnosti</strong><br />
                                Grupa: @activity.Grupa?.naziv<br />
                                Korisnik: @activity.Korisnik?.ime
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }


</div>
<style>
    .body{
        background-color: #fde9f0;
    }

    .calendar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
    }

    .calendar-nav a {
        text-decoration: none;
        font-weight: bold;
        font-size: 18px;
        margin: 0 10px;
        color: #333;
    }

    .calendar-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 10px;
        padding: 10px;
    }

    .calendar-day-name {
        text-align: center;
        font-weight: bold;
        padding: 8px;
        background: #f0f0f0;
        border-radius: 8px;
    }

    .calendar-day {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 12px;
        padding: 8px;
        min-height: 90px;
        position: relative;
        transition: all 0.2s ease-in-out;
    }

        .calendar-day.today {   
            border: 2px solid #ff7043;
        }

        .calendar-day.empty {
            background-color: #f9f9f9;
            border: none;
        }

    .date-number {
        font-weight: bold;
        font-size: 14px;
    }

    .activity-dot {
        width: 10px;
        height: 10px;
        background-color: #FF7043;
        border-radius: 50%;
        margin-top: 6px;
    }

    .calendar-nav-dropdowns {
        display: flex;
        gap: 12px;
        margin: 20px;
        justify-content: center;
    }

        .calendar-nav-dropdowns select {
            padding: 8px 14px;
            font-size: 16px;
            border: 1px solid #dce2f0;
            border-radius: 12px;
            background-color: #f5faff;
            color: #333;
            cursor: pointer;
            outline: none;
            transition: 0.2s ease-in-out;
        }

            .calendar-nav-dropdowns select:hover {
                background-color: #eaf5ff;
                border-color: #a8cfff;
            }

    .calendar-day {
        position: relative;
        padding: 8px;
        border-radius: 12px;
        background-color: white;
        border: 1px solid #ddd;
        min-height: 90px;
    }

        .calendar-day.today {
            border: 2px solid #ff7043;
        }

    .activity-tooltip {
        position: relative;
        display: inline-block;
    }

    .activity-dot {
        width: 12px;
        height: 12px;
        background-color: #FF7043;
        border-radius: 50%;
        margin-top: 6px;
        cursor: pointer;
    }

    .activity-popup {
        display: none;
        position: absolute;
        z-index: 10;
        top: 20px;
        left: 0;
        background-color: #fff;
        color: #333;
        border: 1px solid #ccc;
        border-radius: 12px;
        padding: 10px;
        width: 220px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .activity-tooltip:hover .activity-popup,
        .activity-popup:hover {
            display: block;
        }


    .activity-card {
        margin-bottom: 8px;
        font-size: 14px;
        line-height: 1.4;
    }

        .activity-card:last-child {
            margin-bottom: 0;
        }

    .activity-card {
        cursor: pointer;
    }

    .activity-dot {
        cursor: pointer;
    }

    .calendar-day:hover {
        background-color: #fff2e6; /* subtle highlight on hover */
        border-color: #ff7043;
        cursor: pointer;
    }
</style>